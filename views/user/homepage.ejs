<%- include("header")%>
    <style>
        .user-category-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
            gap: 20px;
            position: relative;
        }

        .user-category-card {
            background-color: #252525;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 250px;
        }

        .user-category-name {
            font-size: 1.5em;
            margin: 0 0 10px;
        }

        .user-category-description {
            font-size: 1em;
            margin: 0;
        }

        /* Alternating alignment using nth-child */
        .user-category-card:nth-child(even) {
            align-self: flex-start;
            margin: 0rem 15rem;
        }

        .user-category-card:nth-child(odd) {
            align-self: flex-end;
            margin: 0rem 15rem 0rem;
        }

        /* Vertical line */
        .user-category-container::before {
            content: '';
            position: absolute;
            left: 50%;
            top: 0;
            bottom: 0;
            width: 5px;
            background-color: #f1f1f1;
            transform: translateX(-50%);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .user-category-container {
                flex-direction: column;
                align-items: center;
            }

            .user-category-card {
                width: 90%;
                align-self: center !important;
            }

            .user-category-container::before {
                display: none;
            }
        }

        .typewriter h1 {
            overflow: hidden;
            border-right: .15em solid orange;
            white-space: nowrap;
            margin: 5px auto;
            letter-spacing: .15em;
            animation:
                typing 3.5s steps(40, end),
                blink-caret .75s step-end infinite;
        }

        /* The typing effect */
        @keyframes typing {
            from {
                width: 0
            }

            to {
                width: 100%
            }
        }

        /* The typewriter cursor effect */
        @keyframes blink-caret {

            from,
            to {
                border-color: transparent
            }

            50% {
                border-color: orange;
            }
        }
    </style>
